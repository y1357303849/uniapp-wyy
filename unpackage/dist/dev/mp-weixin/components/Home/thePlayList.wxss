.thePlayListBox {
  width: 730rpx;
  margin: 20rpx auto;
  margin-top: 120px;
  white-space: nowrap;
  background-color: #5d3131;
  border-radius: 10rpx;
}
.thePlayListBox .listTitle {
  width: 730rpx;
  height: 30px;
  line-height: 30px;
  color: white;
  font-size: 50rpx;
}
.thePlayListBox scroll-view {
  min-width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
}
.thePlayListBox scroll-view .listItem {
  width: 100px;
  height: 300rpx;
  margin-right: 40rpx;
  display: inline-block;
}
.thePlayListBox scroll-view .listItem image {
  width: 100px;
  height: 200rpx;
  border-radius: 20rpx;
}
.thePlayListBox scroll-view .listItem text {
  width: 100px;
  font-size: 30rpx;
  color: white;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
}
.thePlayListBox ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

