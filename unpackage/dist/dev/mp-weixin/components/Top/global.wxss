.globalBox {
  width: 750rpx;
}
.globalBox .topTitle {
  width: 700rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin: 50rpx auto;
}
.globalBox .topTitle text {
  color: white;
  font-size: 50rpx;
}
.globalBox .topLists {
  width: 700rpx;
  margin: 50rpx auto;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background-color: #5d3131;
}
.globalBox .topLists .topItem {
  width: 220rpx;
  height: 200rpx;
}
.globalBox .topLists .topItem image {
  width: 200rpx;
  height: 130rpx;
  border-radius: 10rpx;
}
.globalBox .topLists .topItem text {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

