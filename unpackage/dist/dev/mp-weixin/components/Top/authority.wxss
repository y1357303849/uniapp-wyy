.authorityBox {
  width: 750rpx;
}
.authorityBox .topTitle {
  width: 700rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin: 50rpx auto;
}
.authorityBox .topTitle text {
  color: white;
  font-size: 50rpx;
}
.authorityBox .topList {
  width: 700rpx;
  height: 200rpx;
  margin: 50rpx auto;
  border-radius: 20rpx;
  display: flex;
  background-color: #5d3131;
}
.authorityBox .topList .topListImg {
  width: 200rpx;
  height: 100%;
}
.authorityBox .topList .topListImg text {
  width: 100%;
  height: 40%;
  color: white;
  display: block;
  font-size: 50rpx;
  text-align: center;
}
.authorityBox .topList .topListImg image {
  width: 100%;
  height: 60%;
  border-radius: 10rpx;
}
.authorityBox .topList .topListSong {
  flex: 1;
  height: 90%;
  margin: auto 5%;
  margin-left: 20rpx;
}
.authorityBox .topList .topListSong text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  display: block;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

