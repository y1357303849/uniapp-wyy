.mvTopBox {
  width: 750rpx;
  margin-top: 10rpx;
  background-color: #5d3131;
}
.mvTopBox .mvTopTitle {
  width: 750rpx;
  height: 100rpx;
}
.mvTopBox .mvTopTitle .titleName {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  float: left;
}
.mvTopBox .mvTopTitle .tagList {
  float: left;
}
.mvTopBox .mvTopTitle .tagList text {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  display: block;
  float: left;
}
.mvTopBox .mvTops {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.mvTopBox .mvTops .mvTopItem {
  width: 355rpx;
  height: 200rpx;
  margin: 10rpx auto;
}
.mvTopBox .mvTops .mvTopItem image {
  width: 50%;
  height: 200rpx;
  float: left;
  border-radius: 20rpx;
}
.mvTopBox .mvTops .mvTopItem .mvTopName {
  width: 50%;
  height: 200rpx;
  float: left;
}
.mvTopBox .mvTops .mvTopItem .mvTopName text {
  width: 155rpx;
  height: 50%;
  font-size: 25rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: white;
  padding-left: 10rpx;
}

